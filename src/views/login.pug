    if error
        div(class="alert alert-danger w-50 m-auto mt-3" role="alert")=error

    form(class="w-50 m-auto mt-5" method="POST" action="/login")
        div(class="mb-3")
            label(for="username" class="form-label") Nombre de usuario:
            input(type="text" class="form-control" id="username" name="username")
        
        div(class="mb-3")
            label(for="password" class="form-label") Contrase√±a:
            input(type="password" class="form-control" id="password" name="password")
        button(class="btn btn-danger w-100") Log-In
